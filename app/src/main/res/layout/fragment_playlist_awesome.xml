<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6E8EB">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/headerToolbar"
            style="@style/MyAwesomeToolbar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:navigationIcon="@drawable/arrow_back_light_mode"
            app:title="" />

        <ImageView
            android:id="@+id/coverImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@drawable/playlist_cover_placeholder" />

        <TextView
            android:id="@+id/titleText"
            style="@style/MyTrackTitle"
            android:layout_width="0dp"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/coverImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Playlist 1" />

        <TextView
            android:id="@+id/subtitleText"
            style="@style/MyTrackInfo"
            android:layout_width="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/titleText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Description" />

        <LinearLayout
            android:id="@+id/playlistMetaContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/subtitleText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/durationLabel"
                style="@style/MyTrackInfo"
                android:layout_width="wrap_content"
                android:maxWidth="150dp"
                app:drawableRightCompat="@drawable/one_point"
                app:drawableTint="@color/black"
                tools:text="300 minutes" />

            <TextView
                android:id="@+id/trackCountLabel"
                style="@style/MyTrackInfo"
                android:layout_width="wrap_content"
                android:maxWidth="150dp"
                tools:text="60 tracks" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btnShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:src="@drawable/ic_share"
            app:layout_constraintTop_toBottomOf="@id/playlistMetaContainer"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:src="@drawable/three_points"
            app:layout_constraintTop_toBottomOf="@id/playlistMetaContainer"
            app:layout_constraintStart_toEndOf="@id/btnShare" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/contentSheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bottom_sheet_handle"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_peekHeight="266dp"
        app:behavior_hideable="false">

        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@color/yp_light_gray" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listTracks"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            android:layout_weight="1"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/track_info_row" />
    </LinearLayout>

    <View
        android:id="@+id/dimOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/yp_white"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/menuSheet"
        android:layout_width="match_parent"
        android:layout_height="383dp"
        android:orientation="vertical"
        android:background="@drawable/bottom_sheet_handle"
        android:paddingBottom="40dp"
        android:visibility="gone"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_hideable="true">

        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@color/yp_light_gray" />

        <FrameLayout
            android:id="@+id/playlistItemLayout"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginTop="12dp"
            android:background="@color/dialog_background_color">

            <ImageView
                android:id="@+id/playlistPoster"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="13dp"
                android:layout_marginVertical="16dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/new_pl_image_placeholder" />

            <TextView
                android:id="@+id/playlistInfoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginStart="66dp"
                android:layout_marginEnd="44dp"
                android:layout_marginBottom="28dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textFontWeight="400"
                app:fontFamily="@font/ys_display_regular"
                tools:text="jsjsjsfdfdfddfdfdffdd" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="66dp"
                android:layout_marginTop="34dp"
                android:layout_marginEnd="44dp"
                android:layout_marginBottom="14dp">

                <TextView
                    android:id="@+id/playlistTrackCount"
                    style="@style/MyAwesomeTracker"
                    android:maxWidth="250dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="slsllslsls" />
            </LinearLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/actionShare"
            style="@style/MyAwesomeSettingsTextView"
            android:layout_marginTop="29dp"
            android:layout_marginBottom="21dp"
            android:text="Поделиться" />

        <TextView
            android:id="@+id/actionEdit"
            style="@style/MyAwesomeSettingsTextView"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="21dp"
            android:text="Редактировать информацию" />

        <TextView
            android:id="@+id/actionDelete"
            style="@style/MyAwesomeSettingsTextView"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="21dp"
            android:text="Удалить плейлист" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
