<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lite_background"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:layout_marginStart="4sp"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/layout_margin_bottom"
        android:layout_marginTop="@dimen/layout_top_padding"
        android:layout_marginLeft="@dimen/layout_padding"
        android:layout_marginRight="@dimen/layout_padding"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnFind"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/button_margin"
            android:layout_marginBottom="@dimen/button_spacing"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:fontFamily="sans-serif-medium"
            android:text="@string/find_button"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_large"
            app:cornerRadius="@dimen/button_corner_radius"
            app:icon="@drawable/light_mode"
            app:iconGravity="textStart"
            app:iconPadding="4dp"
            app:iconSize="24dp"
            app:iconTintMode="multiply" />

        <Button
            android:id="@+id/btnMedia"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/button_margin"
            android:layout_marginBottom="@dimen/button_spacing"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:fontFamily="sans-serif-medium"
            android:text="@string/btn_media"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_large"
            app:cornerRadius="@dimen/button_corner_radius"
            app:icon="@drawable/media"
            app:iconGravity="textStart"
            app:iconPadding="4dp"
            app:iconSize="24dp"
            app:iconTintMode="multiply" />

        <Button
            android:id="@+id/btnAdjusts"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/button_margin"
            android:layout_marginBottom="@dimen/button_spacing"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:fontFamily="sans-serif-medium"
            android:text="@string/btn_settings"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_large"
            app:cornerRadius="@dimen/button_corner_radius"
            app:icon="@drawable/adjusts"
            app:iconGravity="textStart"
            app:iconPadding="4dp"
            app:iconSize="24dp"
            app:iconTintMode="multiply" />

    </LinearLayout>

</LinearLayout>