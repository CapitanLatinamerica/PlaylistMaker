<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="titleTextColor">@color/yp_black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="MessageTextStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="MyAwesomeButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:layout_marginBottom">@dimen/button_spacing</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">4dp</item>
        <item name="iconSize">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="iconTintMode">multiply</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="MyAwesomeSettingsButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/colorSecondaryVariant</item>
        <item name="android:paddingStart">@dimen/layout_padding</item>
        <item name="android:paddingEnd">@dimen/layout_padding</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="MyAwesomeSettingsTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:background">?attr/colorSecondaryVariant</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/layout_padding</item>
        <item name="android:paddingEnd">@dimen/layout_right_padding</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="MyAwesomeToolbar" parent="main_style">
        <item name="background">?attr/colorOnPrimary</item>
        <item name="titleTextColor">?attr/colorOnSecondary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="thumbTint">@color/switch_thumb_color</item>
        <item name="trackTint">@color/switch_track_color</item>
    </style>

    <!-- для светлой темы -->
    <style name="Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/yp_white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>


    <!-- для тёмной темы -->
    <style name="Theme.PlaylistMakerNight" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/yp_white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:background">@color/dark_background</item>
    </style>


    <style name="MyAwesomeEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawableStart">@drawable/ic_find</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:hint">@string/search</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">50</item>
        <item name="android:textColor">@color/find_input_text_color</item>
        <item name="android:textColorHint">@color/find_line_hint_color</item>
        <item name="android:drawableTint">@color/find_line_hint_color</item>
        <item name="android:background">@drawable/rounded_edittext</item>
    </style>

</resources>