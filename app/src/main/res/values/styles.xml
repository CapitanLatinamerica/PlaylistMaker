<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="titleTextColor">@color/yp_black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="MessageTextStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="MyAwesomeButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:layout_marginBottom">@dimen/button_spacing</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">4dp</item>
        <item name="iconSize">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="iconTintMode">multiply</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="MyAwesomeSettingsButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/colorSecondaryVariant</item>
        <item name="android:paddingStart">@dimen/layout_padding</item>
        <item name="android:paddingEnd">@dimen/layout_padding</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <!-- Стиль текста в нижнем меню -->
    <style name="MyAwesomeSettingsTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:background">?attr/colorSecondaryVariant</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/layout_padding</item>
        <item name="android:paddingEnd">@dimen/layout_right_padding</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="MyAwesomeToolbar" parent="main_style">
        <item name="background">?attr/colorOnPrimary</item>
        <item name="titleTextColor">?attr/colorOnSecondary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="thumbTint">@color/switch_thumb_color</item>
        <item name="trackTint">@color/switch_track_color</item>
    </style>

    <style name="MyAwesomeEditText">
        <item name="android:drawableStart">@drawable/ic_find</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:hint">@string/search</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">50</item>
        <item name="android:textColor">@color/find_input_text_color</item>
        <item name="android:textColorHint">@color/find_line_hint_color</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:shadowColor">@android:color/transparent</item>
    </style>

    <style name="MyAwesomeTracker">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">11sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <!-- Стиль для названия трека -->
    <style name="MyTrackTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Стиль для исполнителя и длительности -->
    <style name="MyTrackInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontWeight">100</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MyAwesomeRoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">2dp</item>
    </style>

    <style name="MyAwesomeRoundedBigCover">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="MyAwesomeTrackTitleParameter">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <!-- Стиль для TabLayout -->
    <style name="TabLayoutTheme" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">?attr/colorOnPrimary</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabTextColor">?attr/colorOnPrimary</item>
        <item name="tabSelectedTextColor">?attr/colorPrimary</item>
        <item name="tabTextAppearance">@style/TabLayoutTextAppearance</item>
        <item name="android:background">?attr/colorSecondaryVariant</item>
    </style>

    <!-- Стиль для текста вкладок -->
    <style name="TabLayoutTextAppearance">
        <item name="android:fontFamily">@font/ys_display_medium</item> <!-- Шрифт -->
        <item name="android:textSize">14sp</item> <!-- Размер шрифта -->
    </style>

    <!-- Стиль для BottomNavigationView -->
    <style name="BottomNavigationAppearance" >
        <!-- Основные параметры -->
        <item name="android:layout_height">56dp</item>
        <item name="android:background">?attr/colorSecondaryVariant</item>
        <item name="elevation">28dp</item>

        <!-- Цвета иконок и текста -->
        <item name="itemIconTint">@color/bottom_nav_icon_tint</item>
        <item name="itemTextColor">@color/bottom_nav_icon_tint</item> <!-- Важно! -->

        <!-- Фон и поведение -->
        <item name="itemBackground">@null</item>
        <item name="itemHorizontalTranslationEnabled">false</item>
        <item name="itemRippleColor">@null</item>

        <!-- Общий стиль текста -->
        <item name="itemTextAppearanceActive">@style/BottomNavigationText</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationText</item>

    </style>

    <!-- Единый стиль текста (без указания цвета!) -->
    <style name="BottomNavigationText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <style name="TabLayoutInvertedTheme" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">?attr/colorOnPrimary</item>  <!-- для индикатора -->
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="android:background">?attr/colorSecondaryVariant</item>  <!-- Подложка вкладки -->
    </style>

    <style name="tablayoutTextStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="myAwesomeTextInputLayout">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColorHint">?attr/colorPrimary</item>
        <item name="background">?attr/colorPrimary</item>

        <item name="boxStrokeColor">@color/box_stroke_light</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="hintTextColor">@color/yp_blue</item>
    </style>

    <style name="MyAwesomeAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DialogButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogButton</item>
    </style>

    <style name="DialogButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/yp_blue</item>
        <item name="android:background">?attr/colorBackgroundFloating</item>
    </style>

    <style name="MyAwesomeTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/box_stroke_color</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>

        <!-- Цвет рамки без фокуса -->
        <item name="colorControlNormal">?attr/colorControlNormal</item>

        <!-- Текстовая стилизация -->
        <item name="hintTextColor">@color/yp_blue</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Обложка/постер -->
    <style name="PlaylistImageRoundedCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/dialog_background_color</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!-- Обложка плейлиста -->
    <style name="PlaylistCoverImage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <!-- Заголовок плейлиста -->
    <style name="PlaylistTitleText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textSize">24sp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <!-- Стиль для текста в Bottom Sheet -->
    <style name="BottomSheetText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- Стиль для элементов меню -->
    <style name="BottomSheetMenuItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginBottom">21dp</item>
    </style>

    <style name="PlaylistTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="PlaylistSubtitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- Мета-инфо (минуты, треки) -->
    <style name="MetaLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>


</resources>