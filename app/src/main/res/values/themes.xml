<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- для светлой темы -->
    <style name="Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/yp_white</item>
        <item name="colorPrimary">@color/yp_white</item>
        <item name="colorPrimaryDark">@color/yp_black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/yp_black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/yp_white</item>
        <item name="colorOnSecondary">@color/yp_black</item>
        <item name="clear_icon_color">@color/clear_icon_color_light</item>
        <item name="colorControlNormal">@color/textbox_stroke_null</item>
    </style>

    <style name="Awesome.Theme.PlaylistMaker" parent="Theme.MaterialComponents">
        <item name="android:statusBarColor">@color/yp_black</item>
        <item name="colorPrimary">@color/yp_black</item>
        <item name="colorSecondaryVariant">@color/yp_white</item>
        <item name="colorControlNormal">@color/textbox_stroke_null</item>
    </style>

    <style name="Theme.MyAwesomeCustomTI" parent="ThemeOverlay.MaterialComponents">
        <item name="boxStrokeColor">@color/box_stroke_light</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxStrokeErrorColor">@color/yp_red</item>
        <item name="hintTextColor">@color/yp_blue</item>

        <item name="colorControlNormal">@color/textbox_stroke_null</item>

        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">19sp</item>
    </style>


</resources>
